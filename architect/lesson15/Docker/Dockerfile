FROM openjdk:14

ADD ../java/target/lesson15-0.0.1.jar /usr/local/svm/lesson15-0.0.1.jar

ENTRYPOINT java -XX:+UseContainerSupport -XX:MaxRAMPercentage=50 -jar -DDATABASE_PASSWORD=${DATABASE_PASSWORD} -DDATABASE_USER=${DATABASE_USER} -DDATABASE_URL=${DATABASE_URL} -DCACHE_TYPE=${CACHE_TYPE} -DREDIS_HOST=${REDIS_HOST} -DREDIS_PORT=${REDIS_PORT} -DREDIS_PASSWORD=${REDIS_PASSWORD} /usr/local/svm/lesson15-0.0.1.jar
EXPOSE 8000
