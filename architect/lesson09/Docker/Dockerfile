FROM openjdk:10
ADD lesson9-gateway-0.0.1.jar /usr/local/svm/lesson9-gateway-0.0.1.jar

ENTRYPOINT java -XX:+UseContainerSupport -XX:MaxRAMPercentage=50 -jar -DSERVER_PORT=${SERVER_PORT} -DAPP_FUSIONAUTH_HOST=${APP_FUSIONAUTH_HOST} -DAPP_FUSIONAUTH_AUTHTOKENT=${APP_FUSIONAUTH_AUTHTOKEN} -DAPP_FUSIONAUTH_APPLICATIONID=${APP_FUSIONAUTH_APPLICATIONID} -DAPP_FUSIONAUTH_JWTSECRET=${APP_FUSIONAUTH_JWTSECRET} /usr/local/svm/lesson9-gateway-0.0.1.jar
EXPOSE 9090
